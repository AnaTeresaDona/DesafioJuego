<p id="notice"><%= notice %></p>

<h1>Games</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Cover File</th>
      <th>Rules</th>   
      <th>Pieces</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td>
          <ul><%= game.title %></ul>
        </td>
        <td>
          <ul><%= image_tag game.cover.variant(resize: "100x100") %></ul>
          <ul><%= link_to "Bajar imagen de portada", rails_blob_path(game.cover, disposition: "attachment") %></ul>
        </td>
        <td>
          <ul><%= truncate game.rules, length:  300 %> <br> <%= link_to 'Leer mÃ¡s', game %> </ul>       
          <ul><%= link_to "Bajar Instrucciones PDF", rails_blob_path(game.rule, disposition: "attachment") %></ul>
        </td>
        <td>
            <ul><%= image_tag game.pieces.last.variant(resize: "100x100", type: :grayscale) %></ul>
            <ul><%= link_to "Bajar foto", rails_blob_path(game.pieces.last, disposition: "attachment") %></ul>
        </td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

